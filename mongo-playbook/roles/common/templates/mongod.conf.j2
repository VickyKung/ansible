storage:
  dbPath: /mnt/lv01/mongodb
  journal:
    enabled: true

systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

net:
  port: 27017
  bindIp: 0.0.0.0


processManagement:
  timeZoneInfo: /usr/share/zoneinfo

{% if authorization is defined and authorization %}
security:
  authorization: enabled
  clusterAuthMode: keyFile
  keyFile: /mnt/lv01/mongodb-keyfile

replication:
  oplogSizeMB: 4096
  replSetName: {{mongodb_replSet_name}}

{% else %}

security:
  authorization: disabled

{% endif %}
